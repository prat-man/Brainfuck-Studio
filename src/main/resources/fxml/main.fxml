                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/settings.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
               <SplitMenuButton mnemonicParsing="false" onAction="#about" text="About">
